.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  width: 100vw;
  height: 50vh;
}
.container text {
  font-size: larger;
}
.container .info {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  width: 90vw;
  height: 5vh;
  background-color: white;
  border-radius: 12px;
}
.container .info view {
  font-size: larger;
  width: 50%;
  text-align: center;
}
.container .info view input {
  text-align: center;
}
.action {
  display: flex;
}
button {
  width: 30vw;
}
